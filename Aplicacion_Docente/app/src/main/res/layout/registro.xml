<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="start"
    android:background="#FF33B5E5"
    tools:context=".Actividades.registro"
    >
    <ScrollView android:layout_height="match_parent" android:layout_width="wrap_content"
        android:gravity="center"
        android:fillViewport="true">




        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center">


            <CheckedTextView
                android:id="@+id/checkedTextView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignLeft="@+id/editText4"
                android:layout_alignStart="@+id/editText4"
                android:layout_below="@+id/editText4"
                android:text="Email:" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Registro"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/CheckedTextView03"
                android:layout_alignEnd="@+id/CheckedTextView03" />

            <Space
                android:id="@+id/space"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignRight="@+id/button2"
                android:layout_below="@+id/editText3" />

            <EditText
                android:id="@+id/editText1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:layout_below="@+id/checkedTextView1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="66dp"
                android:layout_marginStart="66dp" />

            <CheckedTextView
                android:id="@+id/CheckedTextView01"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignLeft="@+id/editText1"
                android:layout_below="@+id/editText1"
                android:text="Password:" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignLeft="@+id/CheckedTextView03"
                android:layout_alignStart="@+id/CheckedTextView03"
                android:layout_below="@+id/CheckedTextView03"
                android:layout_marginTop="40dp"
                android:ems="10"
                android:inputType="textPersonName">

                <requestFocus />
            </EditText>

            <CheckedTextView
                android:id="@+id/CheckedTextView03"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignLeft="@+id/editText3"
                android:layout_alignStart="@+id/editText3"
                android:layout_below="@+id/spinner1"
                android:text="Nombre:" />

            <EditText
                android:id="@+id/EditText02"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignLeft="@+id/checkedTextView8"
                android:layout_alignStart="@+id/checkedTextView8"
                android:layout_below="@+id/checkedTextView8"
                android:ems="10" />

            <EditText
                android:id="@+id/editText12"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignLeft="@+id/CheckedTextView05"
                android:layout_alignStart="@+id/CheckedTextView05"
                android:layout_below="@+id/CheckedTextView05"
                android:inputType="numberDecimal"
                android:maxLength="9"
                android:ems="10" />

            <EditText
                android:id="@+id/editText11"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignLeft="@+id/checkedTextView7"
                android:layout_alignStart="@+id/checkedTextView7"
                android:layout_below="@+id/checkedTextView7"
                android:ems="10" />

            <EditText
                android:id="@+id/editText10"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignLeft="@+id/checkedTextView"
                android:layout_alignStart="@+id/checkedTextView"
                android:layout_below="@+id/checkedTextView"
                android:ems="10" />

            <CheckedTextView
                android:id="@+id/CheckedTextView05"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignLeft="@+id/editText10"
                android:layout_alignStart="@+id/editText10"
                android:layout_below="@+id/editText10"
                android:text="TelÃ©fono:" />

            <CheckedTextView
                android:id="@+id/checkedTextView6"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignLeft="@+id/EditText02"
                android:layout_alignStart="@+id/EditText02"
                android:layout_below="@+id/EditText02"
                android:text="Colegio:" />

            <CheckedTextView
                android:id="@+id/checkedTextView8"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignLeft="@+id/editText11"
                android:layout_alignStart="@+id/editText11"
                android:layout_below="@+id/editText11"
                android:text="Ciudad:" />

            <CheckedTextView
                android:id="@+id/checkedTextView7"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignLeft="@+id/editText12"
                android:layout_alignStart="@+id/editText12"
                android:layout_below="@+id/editText12"
                android:text="Pais:" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignLeft="@+id/CheckedTextView04"
                android:layout_alignStart="@+id/CheckedTextView04"
                android:layout_below="@+id/CheckedTextView04"
                android:inputType="textCapCharacters"
                android:maxLength="9"
                android:ems="10" />

            <CheckedTextView
                android:id="@+id/CheckedTextView04"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignLeft="@+id/EditText03"
                android:layout_alignStart="@+id/EditText03"
                android:layout_below="@+id/EditText03"
                android:text="DNI:" />

            <EditText
                android:id="@+id/EditText03"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignLeft="@+id/CheckedTextView06"
                android:layout_alignStart="@+id/CheckedTextView06"
                android:layout_below="@+id/CheckedTextView06"
                android:ems="10"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignLeft="@+id/CheckedTextView01"
                android:layout_alignRight="@+id/editText1"
                android:layout_below="@+id/CheckedTextView01"
                android:ems="10"
                android:inputType="textPassword" />

            <CheckedTextView
                android:id="@+id/CheckedTextView02"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignLeft="@+id/editText2"
                android:layout_below="@+id/editText2"
                android:text="Repite tu Password:" />

            <EditText
                android:id="@+id/EditText3"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignLeft="@+id/CheckedTextView02"
                android:layout_alignRight="@+id/editText2"
                android:layout_below="@+id/CheckedTextView02"
                android:ems="10"
                android:inputType="textPassword" />

            <CheckedTextView
                android:id="@+id/CheckedTextView03"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignLeft="@+id/spinner2"
                android:layout_alignStart="@+id/spinner2"
                android:layout_below="@+id/EditText3"
                android:ems="10"
                android:text="Registrarse como:" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignEnd="@+id/spinner1"
                android:layout_alignLeft="@+id/spinner1"
                android:layout_alignRight="@+id/spinner1"
                android:layout_alignStart="@+id/spinner1"
                android:layout_below="@+id/checkedTextView6"
                android:entries="@array/centro" />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignEnd="@+id/EditText3"
                android:layout_alignLeft="@+id/EditText3"
                android:layout_alignRight="@+id/EditText3"
                android:layout_alignStart="@+id/EditText3"
                android:layout_below="@+id/CheckedTextView03"
                android:entries="@array/tipo" />

            <CheckedTextView
                android:id="@+id/CheckedTextView06"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignLeft="@+id/editText3"
                android:layout_below="@+id/editText3"
                android:text="Apellidos:" />


            <CheckedTextView
                android:id="@+id/checkedTextView1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignLeft="@+id/CheckedTextView05"
                android:layout_below="@+id/textView1"
                android:text="Usuario:" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginTop="800dp"
                android:onClick="iniciosesion"
                android:text="Crear Cuenta"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>


    </ScrollView>
</RelativeLayout>